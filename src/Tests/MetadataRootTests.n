    public ShouldSkipReadingReservedField() : void
    {
      def data = array[
        // Signature = 0x424A5342
	    0x42 : byte, 0x53, 0x4A, 0x42, 
	    // MajorVersion = 1
	    0x01, 0x00, 
	    // MinorVersion = 1
